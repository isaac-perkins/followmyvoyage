{% extends 'layout.twig' %}
{% block body %}
  <div class="container m-5" >
    <div class="row ml-5 pl-4">
      <div class="col-lg pl-3">
        <div class="card o-hidden border-0 shadow-lg mt-2 ">
          <div class="card-body p-0">
            <div class="row">
              <!--bg-login-image -->
              <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
              <div class="col-lg-6">
                <div class="px-5 py-4 mb-1 mt-1">
                  <div class="text-center">
                    <h1 class="h4 mb-4 text-white">Login</h1>
                  </div>
                  <form class="user" action="{{ path_for('login') }}" method="post">
                    {{ csrf() }}
                    <div class="form-group{% if has_error('auth') %} alert-danger {% endif %}">
                      <input type="email" name="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Email Address...">
                    </div>
                    <div class="form-group {% if has_error('auth') %} alert-danger {% endif %}">
                      <input type="password" name="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Password">
                    </div>
                    <div class="container p-0">
                      <div class="row">
                        <div class="col-md-6 text-left pl-4">
                          <a class="small disabled" href="{{ path_for('forgot') }}">Forgot Password?</a>
                        </div>
                        <div class="col-md-6 text-right">
                          <div class="form-group">
                            <div class="custom-control custom-checkbox small">
                              <input type="checkbox" class="custom-control-input" id="customCheck">
                              <label class="custom-control-label" for="customCheck">Remember Me</label>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                      Login
                    </button>
                    <hr>
                    <div class="container p-0">
                      <div class="row">
                        <div class="col-md-6">
                          <button href="{{ path_for('forgot') }}" class="btn btn-google btn-user btn-block" disabled>
                            <i class="fab fa-google fa-fw"></i>
                             Google
                          </button>
                        </div>
                        <div class="col-md-6">
                          <button href="{{ path_for('forgot') }}" class="btn btn-facebook btn-user btn-block" disabled>
                            <i class="fab fa-facebook-f fa-fw"></i>
                             Facebook
                          </button>
                        </div>
                      </div>
                    </div>
                  </form>
                  <hr>
                  <div class="container p-0">
                    <div class="row m-2">
                      <div class="col-lg text-right pt-1">
                        <a class="small disabled" href="{{ path_for('register') }}" onclick="return false;">
                          <i class="fas fa-user-plus pr-2"></i>
                          New here? Sign Up
                        </a>
                      </div>
                    </div>
                    <div class="row mt-3 m-2">
                      <div class="col-lg p-0"><div class="alert m-0"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
